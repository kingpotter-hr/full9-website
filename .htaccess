# ให้ index.php เป็นหน้าแรก
DirectoryIndex index.php index.html

# เปิดใช้งาน Rewrite
RewriteEngine On

# หากเป็นไฟล์หรือโฟลเดอร์จริง ให้เข้าถึงได้เลย
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# API requests ให้ไปที่ api/ folder
RewriteRule ^api/(.*)$ api/$1 [L]

# อื่นๆ ให้ไปที่ index.php
RewriteRule ^ index.php [L]

# ป้องกันการเข้าถึงไฟล์ .env และไฟล์ sensitive
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# ป้องกันการ list directory
Options -Indexes

# เพิ่ม security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# เปิดใช้งาน PHP (กรณี Hostinger ใช้ PHP 8.x)
<IfModule mod_php8.c>
    php_value upload_max_filesize 64M
    php_value post_max_size 64M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>
